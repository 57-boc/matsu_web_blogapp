<div class="container">
  <%= form_with(model: @article, url: articles_path, method: 'post', local: true) do |f| %>
    <!--formで 空の@articleの中に入力値を入れ、articles_pathにpostリクエストを送る-->
    <div>
      <%= f.label :title, 'タイトル' %>
    </div>
    <div>
      <%= f.text_field :title, class: 'text' %>
    </div>
    <div>
      <%= f.label :content, '内容' %>
    </div>
    <div>
      <%= f.text_area :content %>
    </div>
    <%= f.submit '保存', class: 'btn-primary'%>
  <% end %>
</div><!-- /.container -->